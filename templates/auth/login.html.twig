						<label class="me-3" for="password">Password</label><input id="password" type="password" name="_password"></div>

					<div class="form-group mt-2">
						<button class="btn btn-success btn-sm mt-2" type="submit">Login</button>
					</div>
				</form>

				<a class="btn btn-primary btn-sm mt-2" href="{{path('register')}}">Register</a>

			</div>
		</div>
	</div>
